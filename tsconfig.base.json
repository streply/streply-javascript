{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "types": [
      "node"
    ],
    "lib": [
      "esnext",
      "dom"
    ],
    "removeComments": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@typings/*": [
        "../../.dts/*"
      ],
    }
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/bin"
  ]
}